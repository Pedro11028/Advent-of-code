package com.mycompany.day4_part1;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Arrays;
import java.util.List;


public class Day4_part1 {

    public static void main(String[] args) throws FileNotFoundException {

  BufferedReader objReader = null;
  String[] guardarNumeros= new String[27];
  int NumColunas=5;
  
  try {
   String strCurrentLine;
   int LinhaAtual=0;
   String[] LineItem=new String[25];
   objReader = new BufferedReader(new FileReader("C:/Users/Pedro/Desktop/input/day4_exemplo.txt"));

   while ((strCurrentLine = objReader.readLine()) != null) {
        LinhaAtual+=1;
        if(LinhaAtual==1){
            guardarNumeros = strCurrentLine.split(",");
        }else{
           LineItem = strCurrentLine.split(",");
           System.out.println(Arrays.toString(LineItem));
        }
   }
   for(int i=0;i<guardarNumeros.length;i++){
      for(int x=0; x<NumColunas;x++){
           for (int z = 0; z < LineItem.length; z++) {
               char c = LineItem[z].charAt(x);
                    if (c == LineItem[i].charAt(0)) {
                      LineItem[i]="-1";
                    }
           }
      }
   }     System.out.println(Arrays.toString(LineItem));
   
  } catch (IOException e) {
   System.out.println("ERROR: " + e.getMessage());
  }
  
        List<String> items = Arrays.asList(guardarNumeros);
        System.out.println("--------------------------------------------------");
       System.out.println(items);
  }
 }
